<%- include("partials/header"); -%>


    <div id="main" class="mt-3 position-fixed w-100">
        <div class="container shadow p-3 bg-light rounded ">
            <p class="h5 text-center">Enter your url/link below</p>
            <form action="/shortUrls" method="post" class="my-4 ">

                <div class="input-group">
                    <input type="url" class="form-control mr-2" placeholder="URL" name="fullUrl" id="fullUrl"
                        aria-describedby="button-addon">
                    <div class="input-group-append" id="button-addon">
                        <button class="btn btn-success btn-outline-white" type="submit">Shrink</button>
                    </div>
                </div>
            </form>
            <blockquote class="blockquote text-center">
                <div>
                    <span class="h6 text-info">Your Full URL :-</h6>
                        <span><a class="text-muted" target="_blank" href="<%= fullUrl %>"> <%= fullUrl %> </a></span>
                </div>
                <div>
                    <span class="h6 text-info">Your Shrinked URL :-</h6>
                        <span><a class="text-muted" target="_blank" href="<%= url %>"> <%= url %> </a></span>
                </div>
            </blockquote>
        </div>

    </div>


    <%- include("partials/footer"); -%>